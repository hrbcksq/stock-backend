{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
        "label": "Watch Typescript",
        "type": "shell",
        "command": "tsc",
        "isBackground": true,
        "args": ["-w", "-p", "."],
        "presentation": {
            "echo": true,
            "reveal": "never",
            "focus": false,
            "panel": "shared"
        },
        "problemMatcher": "$tsc-watch"
    }]
}